{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies.",
  "rebaseWhen": "behind-base-branch",
  "prCreation": "immediate",
  "ignoreDeps": [
    "com.mojang:minecraft"
  ],
  "packageRules": [
    {
      "description": "Auto-merge patch updates for libraries",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchManagers": [
        "gradle",
        "gradle-wrapper"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true
    },
    {
      "description": "Group Core dependencies",
      "groupName": "Core",
      "automerge": false,
      "matchPackageNames": [
        "/^org\\.jetbrains\\.kotlin/",
        "/^org\\.spongepowered/",
        "/^net\\.kyori/",
        "/org.yaml:snakeyaml/",
        "/io.leangen.geantyref:geantyref/"
      ]
    },
    {
      "description": "Group Fabric dependencies",
      "groupName": "Fabric dependencies",
      "automerge": false,
      "matchPackageNames": [
        "/^net\\.fabricmc/",
        "/fabric-loom/"
      ]
    },
    {
      "description": "Group NeoForge dependencies",
      "groupName": "NeoForge dependencies",
      "automerge": false,
      "matchPackageNames": [
        "/^net\\.neoforged/"
      ]
    },
    {
      "description": "Group Paper dependencies",
      "groupName": "Paper dependencies",
      "automerge": false,
      "matchPackageNames": [
        "/^io\\.papermc/",
        "/xyz.jpenilla.run-paper/",
        "/com.gradleup.shadow/"
      ]
    }
  ]
}
