{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies.",
  "rebaseWhen": "behind-base-branch",
  "prCreation": "immediate",
  "ignoreDeps": [
    "com.mojang:minecraft"
  ],
  "packageRules": [
    {
      "description": "Auto-merge patch updates for libraries",
      "matchUpdateTypes": ["patch"],
      "matchManagers": ["gradle", "gradle-wrapper"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true
    },
    {
      "description": "Group Core dependencies",
      "matchPackagePatterns": ["^org\\.jetbrains\\.kotlin", "^org\\.spongepowered", "^net\\.kyori", "org.yaml:snakeyaml", "io.leangen.geantyref:geantyref"],
      "groupName": "Core",
      "automerge": false
    },
    {
      "description": "Group Fabric dependencies",
      "matchPackagePatterns": ["^net\\.fabricmc", "fabric-loom"],
      "groupName": "Fabric dependencies",
      "automerge": false
    },
    {
      "description": "Group NeoForge dependencies",
      "matchPackagePatterns": ["^net\\.neoforged"],
      "groupName": "NeoForge dependencies",
      "automerge": false
    },
    {
      "description": "Group Paper dependencies",
      "matchPackagePatterns": ["^io\\.papermc", "xyz.jpenilla.run-paper", "com.gradleup.shadow"],
      "groupName": "Paper dependencies",
      "automerge": false
    }
  ]
}
